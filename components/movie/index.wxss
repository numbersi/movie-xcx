
.movie {
  font-size: 25rpx;
  text-align: center;
  padding: 0 !important;
  border: none !important;
}

image {
  width: 100%;
  height: 320rpx;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

.movie-top {
  position: relative;
  align-items: center;

}

.title {
  position: absolute;
  bottom: 50rpx;
  left: 0rpx;
  width: 100%;
  height: 25rpx;
  font-size: 13px;
  text-align: center;
  line-height: 25rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
}

.note {
  position: absolute;
  right: 0;
  top: 0;
  background-color: #f70;
}

.star {
  color: white;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
    white-space: nowrap;
  text-overflow: ellipsis;
}

.movie-bottom {
      font-size:15rpx;
}


.color-col {
  margin-bottom: 16rpx;
}

